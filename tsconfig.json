{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "./dist/",
        "lib": [
            "es5",
            "es6",
            "es2015",
            "dom"
        ],
        "noEmitHelpers": false,
        "skipDefaultLibCheck": true,
        "pretty": true,
        "strictNullChecks": false,
        "typeRoots": [
            "node_modules/@types"
        ],
        "removeComments": false,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
