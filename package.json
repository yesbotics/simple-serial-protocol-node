{
    "name": "@yesbotics/simple-serial-protocol-node",
    "version": "2.0.1",
    "description": "Library for communication with Arduino",
    "main": "./lib/index.js",
    "types": "./lib/index.d.ts",
    "scripts": {
        "test": "jest",
        "tsc": "tsc --rootDir \"./src\" --outDir \"./lib\" --inlineSourceMap --declaration",
        "tsc:w": "tsc -w --rootDir \"./src\" --outDir \"./lib\" --inlineSourceMap --declaration",
        "app": "nodemon ./lib/example.js",
        "start": "concurrently --kill-others \"npm run tsc:w --declaration\" \"npm run app\" ",
        "compile": "npm run clean && npm run tsc",
        "clean": "rimraf ./lib",
        "dev": "nodemon -e ts --exec \"npm run compile\"",
        "list-serial-ports:linux": "dmesg | grep tty",
        "prepublish": "npm run compile && npm version patch",
        "build": "tsc"
    },
    "repository": {
        "type": "git",
        "url": "git@gitlab.com:yesbotics/simple-serial-protocol/simple-serial-protocol-node.git"
    },
    "keywords": [
        "arduino",
        "serial",
        "protocol"
    ],
    "author": "Albrecht Nitsche, Jens Kabisch",
    "license": "MIT",
    "homepage": "https://gitlab.com/yesbotics/simple-serial-protocol/simple-serial-protocol-node",
    "dependencies": {
        "serialport": "^8.0.5",
        "typescript-collections": "^1.3.3"
    },
    "devDependencies": {
        "@types/jest": "^24.0.22",
        "@types/serialport": "^7.0.4",
        "concurrently": "^5.0.0",
        "jest": "^24.9.0",
        "nodemon": "^1.19.4",
        "rimraf": "^3.0.0",
        "ts-jest": "^24.1.0",
        "tslint": "^5.20.1",
        "typescript": "^3.7.2"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "testRegex": "^.+\\.spec\\.ts$"
    }
}
