{
    "name": "@yesbotics/simple-serial-protocol-node",
    "version": "2.2.0",
    "description": "General purpose library for the communication between Node.js applications and Arduino devices. Powered by the usage of resource-effecient microcontroller-friendly primitive dataypes.",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "test": "jest",
        "test:w": "jest --watchAll --runInBand --silent=false --verbose",
        "example": "nodemon --inspect=localhost:9001 ./dist/example.js",
        "start": "npm run build:w & npm run example",
        "clean": "rimraf ./dist",
        "list-serial-ports:linux": "dmesg | grep tty",
        "prepublish": "npm run build",
        "build": "npm run clean && npm run generate-barrels && tsc",
        "build:w": "npm run clean && tsc -w --inlineSourceMap",
        "generate-barrels": "barrelsby --config barrelsby.json"
    },
    "repository": {
        "type": "git",
        "url": "git@gitlab.com:yesbotics/simple-serial-protocol/simple-serial-protocol-node.git"
    },
    "bugs": {
        "url": "https://gitlab.com/yesbotics/simple-serial-protocol/simple-serial-protocol-node/issues"
    },
    "keywords": [
        "node",
        "node.js",
        "arduino",
        "microcontroller",
        "serial",
        "protocol",
        "c/c++",
        "c/cpp",
        "iot"
    ],
    "author": "Albrecht Nitsche, Jens Kabisch",
    "license": "MIT",
    "homepage": "https://gitlab.com/yesbotics/simple-serial-protocol/simple-serial-protocol-node",
    "engines": {
        "node": ">=12.0.0"
    },
    "dependencies": {
        "serialport": "^8.0.5"
    },
    "devDependencies": {
        "@types/jest": "^24.0.22",
        "@types/serialport": "^7.0.4",
        "barrelsby": "^2.2.0",
        "jest": "^24.9.0",
        "nodemon": "^1.19.4",
        "rimraf": "^3.0.0",
        "source-map-support": "^0.5.16",
        "ts-jest": "^24.1.0",
        "tslint": "^5.20.1",
        "typescript": "^3.7.2"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "testRegex": "^.+\\.spec\\.ts$"
    }
}
