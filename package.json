{
  "name": "@yesbotics/simple-serial-protocol-node",
  "version": "1.0.3",
  "description": "Library for communication with Arduino",
  "main": "./dist/index.js",
  "typings": "./dist/index",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "tsc": "tsc --rootDir \"./src\" --outDir \"./dist\" --declaration",
    "tsc:w": "tsc -w --rootDir \"./src\" --outDir \"./dist\" --inlineSourceMap --declaration",
    "app": "nodemon ./dist/example.js",
    "start": "concurrently --kill-others \"npm run tsc:w --declaration\" \"npm run app\" ",
    "compile": "npm run tsc",
    "dev": "nodemon -e ts --exec \"npm run compile\"",
    "prepare": "npm run compile",
    "list-serial-ports:linux": "dmesg | grep tty",
    "prepublish": "npm run compile && npm version patch"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:yesbotics/simple-serial-protocol/simple-serial-protocol-node.git"
  },
  "keywords": [
    "arduino",
    "serial",
    "protocol"
  ],
  "author": "Albrecht Nitsche, Jens Kabisch",
  "license": "MIT",
  "homepage": "https://gitlab.com/yesbotics/simple-serial-protocol/simple-serial-protocol-node",
  "dependencies": {
    "@types/serialport": "^4.0.9",
    "serialport": "^6.0.0",
    "typescript-collections": "^1.2.3"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "nodemon": "^1.11.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.1"
  }
}
